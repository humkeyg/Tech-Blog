{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2><a class="link" href="/post/{{id}}">{{title}}</h2>
    <p>Created by {{user.username}} on {{format_date blog.created_at}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{content}}
    </p>
  </div>
</div>
{{/each}}
