<div class="card">
    <div class="card-header">
       <h4><a class="link" href="/post/{{id}}">{{title}}</a></h4>
        <p>Posted by {{user.username}} on {{ created_at}}</p>
    </div>
        <div class="card-body">
            <div class="comments">
              {{#each comments as |comment|}}
                <div class="card">
                    <h3 class="card-header"></h3>
                    <section class="comment card-body">
                        <div class="text">
                            {{ comments_text }}
                        </div>
                        <div class="meta">
                            {{ user.username }}, {{ created_at }}
                        </div>
                    </section>
                </div>
              {{/each}}
          </div>
        </div>
</div>