<div class="card">
    <div class="card-header">
        <h2>Signup</h2>
    </div>
    <form id="signup-form" class="card-body">
        <div>
            <label for="username-input-signup">Username</label>
            <input type="text" id="username-signup" />
        </div>
        <div>
            <label for="password-input-signup" class="form-label">Password</label>
            <input type="password" id="password-signup" />
        </div>
        <button type="submit" id="signup-form" class="btn">Signup!</button>
        <a type="button" href="/login">Login Instead</a>
    </form>
</div>

<script src="/javascript/signup.js"></script>